@using System.Security.Claims
<!DOCTYPE html>
<html lang="es">
<style>
    .product-list-container {
        border: 2px solid #333;
        border-radius: 10px;
        padding: 20px;
        max-width: 400px;
        margin: 0 auto;
        background-color: #f9f9f9;
    }

    .product-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

        .product-list li {
            display: flex;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #ccc;
        }

            .product-list li:last-child {
                border-bottom: none;
            }

        .product-list input[type="checkbox"] {
            margin-right: 10px;
        }

    button {
        display: block;
        width: 100%;
        padding: 10px;
        border: none;
        background-color: #333;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
    }

        button:hover {
            background-color: #555;
        }
</style>
<head>
